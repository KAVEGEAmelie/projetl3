# ==============================================
# CONFIGURATION AFRIKMODE BACKEND
# ==============================================

# Environment
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=afrikmode_db
DB_USER=postgres
DB_PASSWORD=your_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password
MAIL_FROM=noreply@afrikmode.com
MAIL_FROM_NAME=AfrikMode

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp,gif
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# CDN/Storage Configuration
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret
USE_CLOUDINARY=false

# Payment Gateways
# TMoney/Flooz Configuration
TMONEY_API_URL=https://api.tmoney.tg
TMONEY_MERCHANT_ID=your_merchant_id
TMONEY_API_KEY=your_tmoney_key
TMONEY_SECRET_KEY=your_tmoney_secret

# Orange Money Configuration  
ORANGE_MONEY_API_URL=https://api.orange.com
ORANGE_MONEY_CLIENT_ID=your_client_id
ORANGE_MONEY_CLIENT_SECRET=your_client_secret

# MTN Money Configuration
MTN_MONEY_API_URL=https://api.mtn.com
MTN_MONEY_USER_ID=your_user_id
MTN_MONEY_API_KEY=your_mtn_key

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# External APIs
GOOGLE_MAPS_API_KEY=your_google_maps_key
SHIPMENT_TRACKING_API_KEY=your_tracking_key

# Security & Rate Limiting
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:4200,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Multi-tenant
ENABLE_MULTI_TENANT=true
DEFAULT_CURRENCY=FCFA
SUPPORTED_CURRENCIES=FCFA,EUR,USD
DEFAULT_LANGUAGE=fr
SUPPORTED_LANGUAGES=fr,en

# Cache
CACHE_TTL=3600
ENABLE_CACHE=true

# Session
SESSION_SECRET=your_session_secret_here
SESSION_MAX_AGE=86400000